        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Media"
            android:textColor="@color/orange"
            android:textSize="@dimen/largeText" />

